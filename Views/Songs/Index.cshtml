@model List<Song>

@{
    ViewData["Title"] = "Songs";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Songs</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="text-end">
                <a asp-action="Create" class="btn btn-primary">Add song</a>
            </div>
        </div>
        
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="col-3">
                        <a class="text-dark" asp-action="Index" asp-route-sortOrder="Artist">Artist</a>
                    </th>
                    <th class="col-3">
                        <a class="text-dark" asp-action="Index" asp-route-sortOrder="Title">Title</a>
                    </th>
                    <th class="col-3">Description</th>
                    <th class="col-1">Link</th>
                    <th class="col-2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var song in Model)
                {
                    <tr>
                        <td>@song.Artist</td>
                        <td>@song.Title</td>
                        <td>@song.Description</td>
                        <td><a href="@song.Link" target="_blank"><i class="bi-link h3"></i></a>

                    </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@song.Id" class="btn btn-secondary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@song.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
