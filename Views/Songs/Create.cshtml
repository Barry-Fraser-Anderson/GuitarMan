@model Song

@{
    ViewData["Title"] = "Add Song";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Add Song</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form asp-controller="Songs" asp-action="Create">
            <label>Artist</label>
            <input class="form-control" type="text" asp-for="Artist" required />
            <label>Title</label>
            <input class="form-control" type="text" asp-for="Title" required />
            <label>Link</label>
            <input class="form-control" type="text" asp-for="Link" required />

            <div class="mt-4">
                <button class="btn btn-primary" type="submit">Ok</button>
            </div>
        </form>
    </div>
</div>
